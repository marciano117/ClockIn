<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/showPunchUsername"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#ffffff"
        android:layout_marginStart="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showPunchHours"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/showPunchUsername"
        android:layout_marginStart="79dp" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showPunchMinutes"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#ffffff"
        android:layout_below="@+id/showPunchUsername"
        android:layout_alignStart="@+id/showPunchHours" />

    <TextView
        android:text="Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hours"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#ffffff"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/showPunchHours"
        android:layout_alignBottom="@+id/showPunchHours"
        android:layout_toEndOf="@+id/showPunchMinutes" />

    <TextView
        android:text="Minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutes"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/showPunchMinutes"
        android:layout_alignBottom="@+id/showPunchMinutes"
        android:layout_alignStart="@+id/hours" />

</RelativeLayout>
